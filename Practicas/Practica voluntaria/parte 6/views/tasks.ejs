<!DOCTYPE html>
<html lang="es">

<head>
    <title>Gestor de tareas</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="css/tasksScreen.css" media="screen">
    <link rel="stylesheet" href="css/tasksPrint.css" media="print">
    <link rel="icon" href="img/task-planning.png" type="img/png">
    <link href="https://fonts.googleapis.com/css?family=Mansalva&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="/javascripts/tasks.js"></script>
</head>

<body>
    <div id="cabecera">
        <h1>tareas</h1>
        <div id="informacion">
            <img src="/imagenUsuario">
            <div id="usuario">
                <p>
                    <%= user%>
                </p>

                <a href="/logout">Desconectar</a>
            </div>
        </div>
    </div>
    <div id="content">
        <div id="data">
            <% if (tareas != null) { %>
                <ul>
                    <% tareas.forEach(function(tarea, indice, array) { %>

                        <% if(tarea.task.done == 0) { %>
                            <li class="tarea_indiv">
                                <div class="tags">
                                    <%= tarea.task.text %>
                                        <% tarea.tags.forEach(function(tag) { %>
                                            <div class="tag">
                                                <%= tag.tag %>
                                            </div>

                                            <% }); %>
                                </div>
                                <a href="/finish/<%= tarea.task.id%>" name="idTask" class="marcarFinalizada">Marcar Finalizada</a>
                            </li>
                            <% }else{ %>
                                <li class="finalizada">
                                    <%= tarea.task.text %>
                                </li>
                                <%}%>


                                    <% }); %>
                </ul>
                <% } %>

                    <form id="newTask" action="/addTask" method="POST">
                        <label for="task">NOMBRE DE TAREA: </label>
                        <input type="text" name="task" id="input_task_name">
                        <div>
                            <input type="text" name="new_tag_text" id="new_tag">
                            <a id="add_tag"> AÃ‘ADIR TAG </a>
                        </div>

                        <input type="hidden" id="new_hidden_task" value="">

                        <input type="submit" id="add">
                    </form>

                    <div id="tarea_en_curso" class="tarea_indiv">
                        <p id="new_task_name" />
                        <div id="tags_container" class="tags" />
                    </div>
        </div>

        <div id="delete">
            <a href="/deletedCompleted" id="eliminarTarea">Eliminar Tareas Completadas</a>
        </div>
    </div>
    </div>

</body>

</html>